{
  "name": "mahjong-ts",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copy-data",
    "copy-data": "mkdir -p dist/data && cp src/data/*.json dist/data/",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "jest --watch",
    "start:ws": "npm run build && node -e \"require('./dist/server/ws/server.js').startServer(process.env.PORT||8080)\"",
    "dev": "vite",
    "build:vite": "vite build",
    "preview": "vite preview",
    "dev:all": "concurrently -k -n WS,WEB -c blue,green \"npm:start:ws\" \"npm:dev\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "jest": "^29.6.1",
    "playwright": "^1.47.0",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "better-sqlite3": "^12.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.3",
    "ws": "^8.14.2"
  }
}
